<!DOCTYPE HTML>
<html>
<head>
  <title><%= appTitle %></title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <!-- Javascripts libraries -->
  <script src="bower_components/jquery/dist/jquery.min.js"></script>
  <script src="bower_components/knockout/dist/knockout.js"></script>

  <!-- Fonts -->
  <link rel="stylesheet" href="http://fonts.googleapis.com/css?family=Raleway" type="text/css">

  <!--  Load webcomponents-lite.min.js for polyfill support. -->
  <script src="bower_components/webcomponentsjs/webcomponents-lite.min.js"></script>

  <!-- Normailze stylesheet for cross-browser support -->
  <link rel="stylesheet" src="http://normalize-css.googlecode.com/svn/trunk/normalize.css">

  <!-- Server variables -->
  <script>
    var appName = "<%= appName %>";
    var appPath = "/" + appName + "/";
  </script>

  <!-- Components, Styles and Scripts import -->
  <link rel="import" href="components/components.vulcanized.html">
  <link rel="stylesheet" href="stylesheets/styles.css">
  <script src="javascripts/scripts.js"></script>
  <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyA37ROpug384PYbgLgH_GkU6DBWiYnyGlA"></script>

  <!-- My components in development, until sourcemaps support vulcanize -->
  <link rel="import" href="components/custom-style.html">
  <link rel="import" href="components/search-filter.html">

</head>
<body class="fullbleed layout vertical">
  <template id="eventListener" is="dom-bind">
    <paper-drawer-panel class="drawer-panel" on-animate-marker="eAnimateMarker" on-filter-marker="eFilterMarker">
      <div drawer>
        <search-filter label="Hot Spots in Funtown"></search-filter>
      </div>
      <div main>
        <paper-toolbar id="mainToolbar">
          <paper-icon-button icon="menu" paper-drawer-toggle></paper-icon-button>
          <div><%= appTitle %></div>
        </paper-toolbar>
        <div id="map"></div>
      </div>
    </paper-drawer-panel>
    <paper-dialog id="infoDialog" entry-animation="scale-up-animation" exit-animation="fade-out-animation">
      <h1 id="infoHeader" data-bind="text: name"></h1>
      <div data-bind="text: displayPhone"></div>
      <img data-bind="attr: {src: ratingImgUrl}" alt="Review stars">
      <div id="reviewSnippet"><a id="infoUrl" data-bind="attr: {href: url}, text: snippetText" target="_blank"></a></div>
    </paper-dialog>
  </template>
</body>
</html>
